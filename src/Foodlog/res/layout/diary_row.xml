<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

     <LinearLayout android:id="@+id/diary_row_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">
 
        <ImageView
            android:id="@+id/diary_row_image"
            android:layout_width="50dip"
            android:layout_height="50dip"/>
 
    </LinearLayout>
     <!-- Title Of Song-->
    <TextView
        android:id="@+id/diary_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/diary_row_thumb"
        android:layout_toRightOf="@+id/diary_row_thumb"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="bold"/>
 
    <!-- Artist Name -->
    <TextView
        android:id="@+id/diary_row_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/diary_row_title"
        android:textColor="#343434"
        android:textSize="14sp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/diary_row_thumb"/>

</RelativeLayout>