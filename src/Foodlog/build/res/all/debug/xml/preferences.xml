    <EditTextPreference
            android:key="@string/daily_kcal_pref_key"
            android:numeric="integer"
            android:defaultValue="1780"
            android:title="@string/daily_kcal_pref_name" android:summary="@string/daily_kcal_pref_summary"/>
    <EditTextPreference
            android:key="@string/meal_kcal_pref_key"
            android:numeric="integer"
            android:defaultValue="500"
            android:title="@string/meal_kcal_pref_name" android:summary="@string/meal_kcal_pref_summary"/>

