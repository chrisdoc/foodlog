<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:custom="http://schemas.android.com/apk/res-auto" android:key="@string/shared_pref">

    <ListPreference
            android:entries="@array/gender"
            android:entryValues="@array/gender"
            android:key="@string/gender_pref_key"
            android:summary="@string/gender_pref_summary"
            android:title="@string/gender_pref_name"
            android:defaultValue="male"/>
    <com.lukehorvat.NumberPickerDialogPreference
            android:key="@string/age_pref_key"
            android:defaultValue="70"
            android:summary="@string/age_pref_summary"
            android:dialogMessage="@string/age_pref_summary"
            android:max="110"
            android:title="@string/age_pref_name"
            custom:min="0"/>

    <com.lukehorvat.NumberPickerDialogPreference
            android:key="@string/height_pref_key"
            android:defaultValue="175"
            android:summary="@string/height_pref_summary"
            android:dialogMessage="@string/height_pref_summary"
            android:max="210"
            android:title="@string/height_pref_name"
            custom:min="0"/>
    <com.lukehorvat.NumberPickerDialogPreference
            android:key="@string/weight_pref_key"
            android:defaultValue="75"
            android:summary="@string/weight_pref_summary"
            android:dialogMessage="@string/weight_pref_summary"
            android:max="170"
            android:title="@string/weight_pref_name"
            custom:min="20"/>
