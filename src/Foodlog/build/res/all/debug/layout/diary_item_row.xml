<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout android:id="@+id/diary_row_thumb"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="3dip"
                  android:layout_alignParentLeft="true"
                  android:layout_marginRight="5dip">

        <ImageView
                android:id="@+id/diary_item_image"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:scaleType="centerCrop"/>

    </LinearLayout>
    <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/diary_item_detail"
                    android:layout_toRightOf="@+id/diary_row_thumb"

                    android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
                android:id="@+id/diary_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:43"
                android:textSize="20sp" />
       <TextView
                android:id="@+id/diary_item_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_toRightOf="@id/diary_item_date"
                android:gravity="right"
                android:text="1354 kcal"
                android:textSize="20sp" />

</RelativeLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Large Text"
            android:layout_toRightOf="@+id/diary_row_thumb"
            android:layout_below="@id/diary_item_detail"
            android:id="@+id/diary_item_name" android:layout_gravity="left|center_vertical"/>
    <View
            android:id="@+id/diary_row_color"
            android:layout_width="20dip"
            android:layout_height="60dip"
            android:background="#FF00FF"
            android:layout_alignParentRight="true"
            />
</RelativeLayout>