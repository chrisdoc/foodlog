<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp" >

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/diarygroup_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <TextView
            android:id="@+id/diarygroup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31.3.2013"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/diarygroup_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:gravity="right"
            android:text="1354 kcal"
            android:layout_alignParentRight="true"
            android:textSize="20sp" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/diarygroup_consumed"
                  android:layout_below="@id/diarygroup_kcal"
                  android:layout_alignParentRight="true"
                  android:text="12% of daily limit"></TextView>
    </RelativeLayout>


