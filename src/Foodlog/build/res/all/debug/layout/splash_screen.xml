<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/color_splash">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="40sp"
            android:textColor="#FFFFFF"
            android:text="@string/app_name"
            android:id="@+id/textView" android:layout_gravity="center" android:textStyle="bold"
            android:layout_below="@+id/imageView" android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imageView" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:src="@drawable/splash"/>
</RelativeLayout>